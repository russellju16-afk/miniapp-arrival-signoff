# App
NODE_ENV=development
PORT=3000
LOG_LEVEL=info
ADMIN_TOKEN=replace_with_strong_admin_token

# Database (core 默认 sqlite，历史模块仍可使用 Postgres)
DB_URL=file:./prisma/core/dev.db
DATABASE_URL=postgresql://app:app@localhost:5432/kingdee_gateway?schema=public
REDIS_URL=redis://localhost:6379
IDEMPOTENCY_TTL_SECONDS=300

# Kingdee OpenAPI (核心配置)
KD_BASE_URL=https://api.kingdee.com
KD_GW_ROUTER_ADDR=https://tf.jdy.com
KD_CLIENT_ID=xxxxxx
KD_CLIENT_SECRET=xxxxxx
KD_APP_KEY=xxxxxx
KD_APP_SECRET=xxxxxx
KD_APP_TOKEN_PATH=/jdyconnector/app_management/kingdee_auth_token
KD_APP_TOKEN_METHOD=GET
KD_TIMEOUT_MS=10000
KD_TOKEN_CACHE_HOURS=24
KD_MOCK_MODE=true

# WeChat mini-program (登录骨架)
WECHAT_LOGIN_MOCK_ENABLED=true
WECHAT_MOCK_OPENID=mock-openid-dev
WECHAT_APPID=
WECHAT_APPSECRET=

# 兼容旧模块（可选）
KINGDEE_BASE_URL=https://api.kingdee.com
KINGDEE_TIMEOUT_MS=10000
KINGDEE_AUTH_PATH=/openapi/auth/token
KINGDEE_DELIVERY_DETAIL_PATH=/openapi/delivery-orders
KINGDEE_SIGNOFF_PATH=/openapi/delivery-signoffs
KINGDEE_APP_TOKEN_BASE_URL=https://api.kingdee.com
KINGDEE_APP_TOKEN_PATH=/jdyconnector/app_management/kingdee_auth_token
KINGDEE_APP_TOKEN_METHOD=GET
KINGDEE_APP_TOKEN_TIMEOUT_MS=10000
KINGDEE_TOKEN_REFRESH_WINDOW_SECONDS=600

SYNC_SCHEDULER_ENABLED=false
SYNC_MASTER_DAILY_CRON=0 2 * * *
SYNC_DOCUMENT_HOURLY_CRON=0 * * * *
UPLOAD_DIR=./uploads
UPLOAD_PUBLIC_BASE_URL=http://localhost:3000
KINGDEE_APP_ID=
KINGDEE_APP_SECRET=
KINGDEE_TENANT_ID=
