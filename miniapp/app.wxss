/* Design Tokens - Hema Fresh Blue */
page {
  --color-primary: #1677ff;
  --color-primary-pressed: #0f5ed6;
  --color-primary-light: #e8f1ff;
  --color-bg: #f6f9ff;
  --color-surface: #ffffff;
  --color-border: #e6eef8;
  --color-text-primary: #0b1f3a;
  --color-text-secondary: #5b6b7c;
  --color-text-hint: #8a97a6;
  --color-success: #16a34a;
  --color-warning: #f59e0b;
  --color-danger: #ef4444;
  --color-accent: #ff6a3d;

  --radius-md: 12rpx;
  --space-1: 8rpx;
  --space-2: 12rpx;
  --space-3: 16rpx;
  --space-4: 24rpx;

  --font-title: 34rpx;
  --font-body: 28rpx;
  --font-caption: 24rpx;

  background: #f6f9ff;
  background: var(--color-bg);
  color: #0b1f3a;
  color: var(--color-text-primary);
  font-size: 28rpx;
  font-size: var(--font-body);
  box-sizing: border-box;
}

view,
text,
button,
input,
textarea,
picker,
switch {
  box-sizing: border-box;
}

.container {
  padding: 24rpx;
  padding: var(--space-4);
}

.safe-bottom {
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  padding-bottom: calc(var(--space-4) + env(safe-area-inset-bottom));
}

.card {
  background: #ffffff;
  background: var(--color-surface);
  border-radius: 12rpx;
  border-radius: var(--radius-md);
  padding: 24rpx;
  padding: var(--space-4);
  border: 1rpx solid #e6eef8;
  border: 1rpx solid var(--color-border);
  box-shadow: 0 8rpx 20rpx rgba(15, 23, 42, 0.04);
  margin-bottom: 24rpx;
  margin-bottom: var(--space-4);
}

.card-plain {
  border-radius: 12rpx;
  border-radius: var(--radius-md);
  border: 1rpx solid #e6eef8;
  border: 1rpx solid var(--color-border);
  background: #ffffff;
  background: var(--color-surface);
  padding: 16rpx;
  padding: var(--space-3);
}

.title {
  font-size: 34rpx;
  font-size: var(--font-title);
  font-weight: 700;
  color: #0b1f3a;
  color: var(--color-text-primary);
}

.sub-title {
  font-size: 24rpx;
  font-size: var(--font-caption);
  color: #5b6b7c;
  color: var(--color-text-secondary);
}

.label {
  color: #5b6b7c;
  color: var(--color-text-secondary);
  font-size: 24rpx;
  font-size: var(--font-caption);
}

.value {
  color: #0b1f3a;
  color: var(--color-text-primary);
  font-size: 28rpx;
  font-size: var(--font-body);
}

.row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 8rpx 0;
  margin: var(--space-1) 0;
  gap: 12rpx;
  gap: var(--space-2);
}

.section-head {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 12rpx;
  gap: var(--space-2);
  margin-bottom: 12rpx;
  margin-bottom: var(--space-2);
}

button.btn-primary,
button.btn-plain,
button.btn-danger {
  margin-top: 12rpx;
  margin-top: var(--space-2);
  height: 72rpx;
  line-height: 72rpx;
  padding: 0 16rpx;
  border-radius: 12rpx;
  border-radius: var(--radius-md);
  font-size: 28rpx;
  font-size: var(--font-body);
  display: flex;
  align-items: center;
  justify-content: center;
}

button.btn-primary::after,
button.btn-plain::after,
button.btn-danger::after {
  border: 0;
}

.btn-primary {
  background: #1677ff;
  background: var(--color-primary);
  color: #ffffff;
  border: 1rpx solid #1677ff;
  border: 1rpx solid var(--color-primary);
}

.btn-primary.button-hover,
.btn-primary:active {
  background: #0f5ed6;
  background: var(--color-primary-pressed);
  border-color: #0f5ed6;
  border-color: var(--color-primary-pressed);
}

.btn-plain {
  background: #ffffff;
  background: var(--color-surface);
  color: #1677ff;
  color: var(--color-primary);
  border: 1rpx solid #e6eef8;
  border: 1rpx solid var(--color-border);
}

.btn-plain.button-hover,
.btn-plain:active {
  background: #e8f1ff;
  background: var(--color-primary-light);
}

.btn-danger {
  background: #ef4444;
  background: var(--color-danger);
  color: #ffffff;
  border: 1rpx solid #ef4444;
  border: 1rpx solid var(--color-danger);
}

.btn-danger.button-hover,
.btn-danger:active {
  background: #ef4444;
  border-color: #ef4444;
}

.btn-primary[disabled],
.btn-plain[disabled],
.btn-danger[disabled] {
  background: #eef2f7 !important;
  color: #a8b3c2 !important;
  border-color: #eef2f7 !important;
  opacity: 1;
}

.badge-ok,
.badge-warn,
.badge-quote,
.badge-disabled {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 92rpx;
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
}

.badge-ok {
  color: #16a34a;
  color: var(--color-success);
  background: #ecfdf3;
  border: 1rpx solid #bfe8ce;
}

.badge-warn {
  color: #f59e0b;
  color: var(--color-warning);
  background: #fff8e9;
  border: 1rpx solid #fde7b1;
}

.badge-quote {
  color: #ff6a3d;
  color: var(--color-accent);
  background: #fff1eb;
  border: 1rpx solid #ffd3c4;
}

.badge-disabled {
  color: #8a97a6;
  color: var(--color-text-hint);
  background: #eef2f7;
  border: 1rpx solid #eef2f7;
}

.empty {
  text-align: center;
  color: #8a97a6;
  color: var(--color-text-hint);
  padding: 80rpx 0;
  font-size: 24rpx;
  font-size: var(--font-caption);
}

.empty-state {
  text-align: center;
  padding: 64rpx 12rpx;
}

.empty-title {
  font-size: 30rpx;
  color: #0b1f3a;
  color: var(--color-text-primary);
  font-weight: 600;
}

.empty-desc {
  margin-top: 10rpx;
  font-size: 24rpx;
  font-size: var(--font-caption);
  color: #5b6b7c;
  color: var(--color-text-secondary);
  line-height: 1.5;
}

.cta-row {
  margin-top: 16rpx;
  margin-top: var(--space-3);
  display: flex;
  gap: 12rpx;
  gap: var(--space-2);
}

.cta-btn {
  flex: 1;
  margin-top: 0;
}

.input,
.textarea {
  width: 100%;
  border: 1rpx solid #e6eef8;
  border: 1rpx solid var(--color-border);
  background: #ffffff;
  background: var(--color-surface);
  border-radius: 12rpx;
  border-radius: var(--radius-md);
  padding: 14rpx;
}

.textarea {
  min-height: 140rpx;
}

.hero-card {
  background: linear-gradient(180deg, #e8f1ff 0%, #e8f1ff 100%);
  border: 1rpx solid #e6eef8;
  color: #0b1f3a;
  color: var(--color-text-primary);
}

.hero-title {
  font-size: 38rpx;
  font-weight: 700;
  color: #0b1f3a;
  color: var(--color-text-primary);
}

.hero-sub {
  margin-top: 8rpx;
  font-size: 24rpx;
  font-size: var(--font-caption);
  color: #5b6b7c;
  color: var(--color-text-secondary);
}

.hero-meta {
  margin-top: 16rpx;
  margin-top: var(--space-3);
  display: flex;
  gap: 12rpx;
  gap: var(--space-2);
}

.hero-stat {
  flex: 1;
  border-radius: 12rpx;
  border-radius: var(--radius-md);
  padding: 12rpx;
  padding: var(--space-2);
  background: #ffffff;
  background: var(--color-surface);
  border: 1rpx solid #e6eef8;
  border: 1rpx solid var(--color-border);
}

.hero-stat-label {
  font-size: 22rpx;
  color: #8a97a6;
  color: var(--color-text-hint);
}

.hero-stat-value {
  margin-top: 6rpx;
  font-size: 34rpx;
  font-weight: 700;
  color: #1677ff;
  color: var(--color-primary);
}

.grid-2x2 {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 12rpx;
  gap: var(--space-2);
}

.entry-tile {
  margin-top: 0;
  border-radius: 12rpx;
  border-radius: var(--radius-md);
  border: 1rpx solid #e6eef8;
  border: 1rpx solid var(--color-border);
  background: #ffffff;
  background: var(--color-surface);
  padding: 16rpx;
  padding: var(--space-3);
  min-height: 128rpx;
  text-align: left;
}

.entry-tile.button-hover,
.entry-tile:active {
  background: #e8f1ff;
  background: var(--color-primary-light);
}

.entry-tile::after {
  border: 0;
}

.entry-title {
  display: block;
  font-size: 30rpx;
  color: #0b1f3a;
  color: var(--color-text-primary);
  font-weight: 700;
}

.entry-sub {
  display: block;
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #5b6b7c;
  color: var(--color-text-secondary);
}

.notice-text {
  margin-top: 8rpx;
  font-size: 24rpx;
  font-size: var(--font-caption);
  color: #1677ff;
  color: var(--color-primary);
  line-height: 1.6;
}

.chip-row {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.chip {
  border: 1rpx solid #e6eef8;
  border: 1rpx solid var(--color-border);
  border-radius: 999rpx;
  font-size: 22rpx;
  line-height: 1.2;
  padding: 10rpx 18rpx;
  color: #5b6b7c;
  color: var(--color-text-secondary);
  background: #ffffff;
  background: var(--color-surface);
}

.chip-active {
  color: #1677ff;
  color: var(--color-primary);
  border-color: #1677ff;
  border-color: var(--color-primary);
  background: #e8f1ff;
  background: var(--color-primary-light);
}

.chip-disabled {
  color: #8a97a6;
  color: var(--color-text-hint);
  border-color: #eef2f7;
  background: #f6f9ff;
}

.status-chip {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border-radius: 999rpx;
  min-width: 96rpx;
  padding: 6rpx 14rpx;
  font-size: 22rpx;
  border: 1rpx solid #e6eef8;
  border: 1rpx solid var(--color-border);
  color: #5b6b7c;
  color: var(--color-text-secondary);
  background: #ffffff;
  background: var(--color-surface);
}

.status-chip-ok {
  color: #16a34a;
  color: var(--color-success);
  border-color: #bfe8ce;
  background: #ecfdf3;
}

.status-chip-fail {
  color: #ef4444;
  color: var(--color-danger);
  border-color: #fecdd3;
  background: #fff1f2;
}

.cell-group {
  padding: 0 24rpx;
  padding: 0 var(--space-4);
}

.cell-group-title {
  margin: 16rpx 0 8rpx;
  margin: var(--space-3) 0 var(--space-1);
  font-size: 26rpx;
  color: #5b6b7c;
  color: var(--color-text-secondary);
  font-weight: 600;
}

.cell {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 0;
  padding: var(--space-3) 0;
  border-bottom: 1rpx solid #e6eef8;
  border-bottom: 1rpx solid var(--color-border);
}

.cell:last-child {
  border-bottom: 0;
}

.cell-body {
  flex: 1;
  min-width: 0;
}

.cell-title {
  font-size: 28rpx;
  color: #0b1f3a;
  color: var(--color-text-primary);
  font-weight: 600;
}

.cell-desc {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #5b6b7c;
  color: var(--color-text-secondary);
  line-height: 1.4;
}

.cell-arrow {
  margin-left: 16rpx;
  font-size: 26rpx;
  color: #8a97a6;
  color: var(--color-text-hint);
}

.muted {
  color: #8a97a6;
  color: var(--color-text-hint);
}

.page-shell {
  min-height: 100vh;
}

.grid-2 {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 12rpx;
}

.section-strip {
  margin-bottom: 12rpx;
  padding: 12rpx 16rpx;
  border-radius: 12rpx;
  border: 1rpx dashed var(--color-border);
  background: linear-gradient(180deg, #ffffff 0%, #e8f1ff 100%);
}

.sticky-tabs {
  position: sticky;
  top: 0;
  z-index: 8;
  background: var(--color-surface);
}

.fixed-action-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 12rpx 24rpx calc(12rpx + env(safe-area-inset-bottom));
  background: #ffffff;
  border-top: 1rpx solid var(--color-border);
  box-shadow: 0 -6rpx 18rpx rgba(15, 23, 42, 0.06);
  z-index: 20;
}

.fixed-action-btn {
  margin-top: 0;
}

.has-fixed-action {
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
}

.icon-dot {
  width: 62rpx;
  height: 62rpx;
  border-radius: 50%;
  border: 1rpx solid var(--color-border);
  background: var(--color-primary-light);
  color: var(--color-primary);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
}

.empty-illustration {
  margin: 0 auto 12rpx;
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  border: 1rpx solid var(--color-border);
  background: var(--color-primary-light);
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--color-primary);
  font-size: 44rpx;
}
