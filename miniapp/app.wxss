page {
  background: #f6f7fb;
  color: #1f2937;
  font-size: 28rpx;
  box-sizing: border-box;
}

view,
text,
button,
input,
textarea,
picker {
  box-sizing: border-box;
}

.container {
  padding: 24rpx;
}

.card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(15, 23, 42, 0.06);
  margin-bottom: 20rpx;
}

.title {
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.sub-title {
  font-size: 26rpx;
  color: #64748b;
}

.label {
  color: #475569;
  font-size: 24rpx;
}

.value {
  color: #111827;
  font-size: 28rpx;
}

.row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 10rpx 0;
}

.btn-primary {
  background: #2563eb;
  color: #ffffff;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.btn-plain {
  background: #ffffff;
  color: #2563eb;
  border: 1rpx solid #bfdbfe;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.btn-danger {
  background: #dc2626;
  color: #ffffff;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.empty {
  text-align: center;
  color: #94a3b8;
  padding: 80rpx 0;
}
