.item-card {
  margin-bottom: 16rpx;
}

.mini-btn {
  margin: 0;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 22rpx;
  padding: 0 14rpx;
}

.alert-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.flex-1 {
  flex: 1;
}

.check {
  width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  border-radius: 8rpx;
  border: 1rpx solid #e6eef8;
  color: #ffffff;
  font-size: 22rpx;
  margin-right: 12rpx;
}

.checked {
  background: #1677ff;
  border-color: #1677ff;
}

.qty-row {
  margin-top: 12rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.qty-btn {
  width: 62rpx;
  margin: 0;
  padding: 0;
}

.qty-text {
  width: 56rpx;
  text-align: center;
}

.remove-btn {
  margin: 0;
  color: #ef4444;
  border-color: #fecaca;
}

.select-all {
  display: flex;
  align-items: center;
}

.select-all .label {
  margin-left: 8rpx;
}

.summary-row {
  margin: 16rpx 0;
}

.amount {
  color: #ff6a3d;
  font-size: 32rpx;
  font-weight: 700;
}
