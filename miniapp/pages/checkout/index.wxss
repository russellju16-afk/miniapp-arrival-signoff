.section-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.btn-mini {
  margin: 0;
  font-size: 22rpx;
  color: #2563eb;
  background: #eff6ff;
  border: 1rpx solid #bfdbfe;
  border-radius: 999rpx;
  padding: 4rpx 16rpx;
  line-height: 1.5;
}

.picker {
  margin-top: 10rpx;
  padding: 16rpx;
  border: 1rpx solid #dbe2ea;
  border-radius: 12rpx;
  color: #334155;
}

.line {
  border-top: 1rpx solid #eef2f7;
  padding: 14rpx 0;
}

.line:first-child {
  border-top: 0;
}

.remark {
  width: 100%;
  min-height: 140rpx;
  border: 1rpx solid #dbe2ea;
  border-radius: 12rpx;
  margin-top: 12rpx;
  padding: 14rpx;
}

.summary-row {
  margin-top: 10rpx;
}

.total-row {
  margin-top: 18rpx;
  padding-top: 14rpx;
  border-top: 1rpx dashed #dbe2ea;
}

.total {
  color: #dc2626;
  font-size: 36rpx;
  font-weight: 700;
}

.discount {
  color: #16a34a;
  font-weight: 600;
}
