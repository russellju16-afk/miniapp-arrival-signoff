.mode-row {
  margin-top: 12rpx;
  display: flex;
  gap: 12rpx;
}

.mode {
  flex: 1;
  border-radius: 12rpx;
  border: 1rpx solid #e6eef8;
  background: #ffffff;
  text-align: center;
  padding: 12rpx 0;
  color: #5b6b7c;
}

.mode-active {
  color: #1677ff;
  border-color: #1677ff;
  background: #e8f1ff;
}

.section-head {
  margin-top: 16rpx;
}

.mini-btn {
  margin: 0;
  font-size: 22rpx;
  height: 56rpx;
  line-height: 56rpx;
  padding: 0 16rpx;
}

.alert-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.picker,
.picker-link {
  margin-top: 10rpx;
  border-radius: 12rpx;
  border: 1rpx solid #e6eef8;
  padding: 14rpx;
  color: #0b1f3a;
  background: #f6f9ff;
}

.field-row {
  margin-top: 10rpx;
}

.input,
.textarea {
  margin-top: 12rpx;
}

.line {
  border-top: 1rpx solid #e6eef8;
  padding: 14rpx 0;
}

.line:first-child {
  border-top: 0;
}

.total-row {
  margin-top: 10rpx;
  padding-top: 12rpx;
  border-top: 1rpx dashed #e6eef8;
}

.total {
  color: #ff6a3d;
  font-size: 34rpx;
  font-weight: 700;
}
