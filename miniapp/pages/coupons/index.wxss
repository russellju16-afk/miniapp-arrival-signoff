.coupons-page {
  min-height: 100vh;
  background: #f6f9ff;
}

.tabs-strip {
  display: flex;
  align-items: center;
  background: #ffffff;
  border-bottom: 1rpx solid #e6eef8;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 8rpx 18rpx;
  color: #5b6b7c;
  font-size: 28rpx;
  position: relative;
}

.tab-active {
  color: #0b1f3a;
  font-weight: 600;
}

.tab-active::after {
  content: '';
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 8rpx;
  width: 52rpx;
  height: 6rpx;
  border-radius: 999rpx;
  background: #1677ff;
}

.alert-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.mini-btn {
  margin: 0;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 22rpx;
  padding: 0 14rpx;
}

.item {
  margin-top: 16rpx;
  border: 1rpx dashed #e6eef8;
}

.coupon-name {
  font-size: 30rpx;
}

.value-text {
  color: #ff6a3d;
  font-weight: 700;
}

.status {
  margin-top: 12rpx;
  display: inline-block;
  font-size: 22rpx;
  padding: 3rpx 12rpx;
  border-radius: 999rpx;
}

.status.AVAILABLE {
  color: #16a34a;
  background: #ecfdf3;
}

.status.USED {
  color: #5b6b7c;
  background: #e6eef8;
}

.status.EXPIRED {
  color: #ef4444;
  background: #fff1f2;
}
