.tabs {
  display: flex;
  gap: 10rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 14rpx 0;
  border-radius: 10rpx;
  background: #f1f5f9;
  color: #64748b;
}

.tab-active {
  background: #dbeafe;
  color: #1d4ed8;
  font-weight: 600;
}

.item {
  margin-top: 16rpx;
  border: 1rpx dashed #bfdbfe;
}

.value-text {
  color: #dc2626;
  font-weight: 700;
}

.status {
  margin-top: 12rpx;
  display: inline-block;
  font-size: 22rpx;
  padding: 3rpx 12rpx;
  border-radius: 999rpx;
}

.status.AVAILABLE {
  color: #166534;
  background: #dcfce7;
}

.status.USED {
  color: #475569;
  background: #e2e8f0;
}

.status.EXPIRED {
  color: #991b1b;
  background: #fee2e2;
}
