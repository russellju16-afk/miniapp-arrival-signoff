.line {
  padding: 14rpx 0;
  border-bottom: 1rpx solid #e6eef8;
}

.alert-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.mini-btn {
  margin: 0;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 22rpx;
  padding: 0 14rpx;
}

.line:last-child {
  border-bottom: none;
}

.line-name {
  font-size: 28rpx;
  color: #0b1f3a;
}

.line-meta {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #5b6b7c;
}

.lines-empty {
  padding: 36rpx 12rpx 12rpx;
}
