.feedback-page {
  min-height: 100vh;
}

.feedback-types {
  margin-top: 12rpx;
  display: grid;
  gap: 12rpx;
}

.feedback-type {
  display: inline-flex;
  align-items: center;
  gap: 10rpx;
  color: #5b6b7c;
  font-size: 30rpx;
}

.feedback-type.active {
  color: #0b1f3a;
  font-weight: 600;
}

.feedback-type .radio {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  border: 1rpx solid #d4dce8;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
}

.feedback-type.active .radio {
  border-color: #1677ff;
  background: #1677ff;
}

.image-row {
  margin-top: 14rpx;
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.upload-box,
.upload-preview {
  width: 132rpx;
  height: 132rpx;
  border-radius: 12rpx;
}

.upload-box {
  border: 1rpx dashed #c8d9ef;
  background: #f6f9ff;
  color: #8a97a6;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
}

.upload-text {
  margin-top: 4rpx;
  font-size: 20rpx;
}

.feedback-actions {
  background: #ffffff;
}

.action-row {
  display: flex;
  gap: 12rpx;
}

.action-btn {
  flex: 1;
  margin-top: 0;
}
