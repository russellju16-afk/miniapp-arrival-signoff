.profile-edit-page {
  min-height: 100vh;
}

.form-card {
  padding-top: 8rpx;
}

.field-row {
  padding: 14rpx 0;
  border-bottom: 1rpx solid #e6eef8;
}

.field-row:last-child {
  border-bottom: 0;
}

.field-label {
  font-size: 32rpx;
  color: #0b1f3a;
  margin-bottom: 10rpx;
}

.field-label.required::before {
  content: '*';
  color: #ef4444;
  margin-right: 4rpx;
}

.field-row .input {
  margin-top: 0;
  background: #f6f9ff;
}

.type-row {
  display: flex;
  flex-direction: column;
}

.type-options {
  display: flex;
  align-items: center;
  gap: 22rpx;
}

.type-option {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  color: #5b6b7c;
  font-size: 30rpx;
}

.type-option.active {
  color: #0b1f3a;
  font-weight: 600;
}

.radio {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  border: 1rpx solid #d4dce8;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
}

.type-option.active .radio {
  border-color: #1677ff;
  background: #1677ff;
}

.switch-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.switch-row .field-label {
  margin-bottom: 0;
  font-size: 28rpx;
}
