.section-head {
  margin-bottom: 10rpx;
}

.mini-btn {
  margin: 0;
  font-size: 22rpx;
  height: 56rpx;
  line-height: 56rpx;
  padding: 0 16rpx;
}

.picker {
  border: 1rpx solid #e6eef8;
  border-radius: 12rpx;
  padding: 14rpx;
  background: #f6f9ff;
}

.textarea {
  margin-top: 12rpx;
}

.order-item,
.record-item {
  margin-top: 12rpx;
  border-top: 1rpx solid #e6eef8;
  padding-top: 12rpx;
}

.summary {
  margin-top: 12rpx;
}

.check {
  width: 34rpx;
  height: 34rpx;
  line-height: 34rpx;
  text-align: center;
  border-radius: 8rpx;
  border: 1rpx solid #e6eef8;
  color: #ffffff;
  font-size: 20rpx;
}

.checked {
  background: #1677ff;
  border-color: #1677ff;
}
