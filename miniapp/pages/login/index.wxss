.login-page {
  min-height: 100vh;
  padding: 0 24rpx 24rpx;
  background: radial-gradient(circle at 0% 0%, #e8f1ff 0%, #e8f1ff 28%, #f6f9ff 72%);
}

.login-hero {
  padding: 88rpx 8rpx 34rpx;
}

.hero-title {
  font-size: 50rpx;
  font-weight: 700;
  color: #0b1f3a;
}

.hero-sub {
  margin-top: 10rpx;
  color: #5b6b7c;
  font-size: 26rpx;
  line-height: 1.5;
}

.input,
.textarea {
  margin-top: 14rpx;
}

.textarea {
  min-height: 140rpx;
}

button {
  margin-top: 18rpx;
}

.warn {
  margin: 14rpx 0;
  color: #ff6a3d;
}

.debug-row {
  margin-top: 22rpx;
}

.login-error {
  padding: 24rpx 12rpx;
}
