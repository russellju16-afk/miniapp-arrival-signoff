<view class="container">
  <view class="card">
    <view class="title">客户信息</view>
    <view class="row">
      <text class="label">名称</text>
      <text class="value">{{customer.name || '-'}}</text>
    </view>
    <view class="row">
      <text class="label">手机号</text>
      <text class="value">{{customer.phone || '-'}}</text>
    </view>
    <view class="row">
      <text class="label">客户ID</text>
      <text class="value">{{customer.id || '-'}}</text>
    </view>
    <view class="row">
      <text class="label">访问 Token</text>
      <text class="value">{{tokenMasked}}</text>
    </view>
    <button class="btn-plain" bindtap="copyTokenTail">复制脱敏 Token</button>
  </view>

  <view class="card stats-grid">
    <view class="stat" bindtap="goFavorites">
      <view class="stat-num">{{favoritesCount}}</view>
      <view class="stat-label">我的收藏</view>
    </view>
    <view class="stat" bindtap="goHistory">
      <view class="stat-num">{{historyCount}}</view>
      <view class="stat-label">浏览足迹</view>
    </view>
    <view class="stat" bindtap="goCoupons">
      <view class="stat-num">{{couponCount}}</view>
      <view class="stat-label">可用券</view>
    </view>
    <view class="stat" bindtap="goAddress">
      <view class="stat-num">{{addressCount}}</view>
      <view class="stat-label">收货地址</view>
    </view>
  </view>

  <view class="card quick-actions">
    <button class="btn-primary" bindtap="goProducts">商城首页</button>
    <button class="btn-plain" bindtap="goCart">购物车</button>
    <button class="btn-plain" bindtap="goOrders">我的订单</button>
    <button class="btn-plain" bindtap="goDeliveries">到货签收</button>
    <button class="btn-plain" bindtap="goStatements">对账中心</button>
    <button class="btn-plain" bindtap="goAddress">地址管理</button>
    <button class="btn-plain" bindtap="goCoupons">优惠券中心</button>
  </view>

  <view class="card">
    <view class="title">平台信息</view>
    <view class="sub-title">版本：{{version}}</view>
    <view class="sub-title">隐私政策：{{privacyPolicyUrl || '未配置'}}</view>
    <view class="sub-title">用户协议：{{userAgreementUrl || '未配置'}}</view>
    <view class="sub-title">客服热线：{{customerServicePhone || '未配置'}}</view>
    <button class="btn-plain" bindtap="openPrivacyPolicy">查看隐私政策</button>
    <button class="btn-plain" bindtap="openUserAgreement">查看用户协议</button>
    <button class="btn-plain" bindtap="callCustomerService">联系客服</button>
    <button class="btn-danger" bindtap="logout">退出登录</button>
  </view>
</view>
