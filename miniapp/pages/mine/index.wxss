.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 12rpx;
}

.stat {
  border: 1rpx solid #e2e8f0;
  background: #f8fafc;
  border-radius: 12rpx;
  padding: 18rpx;
  text-align: center;
}

.stat-num {
  font-size: 34rpx;
  font-weight: 700;
  color: #0f172a;
}

.stat-label {
  margin-top: 4rpx;
  color: #64748b;
  font-size: 24rpx;
}

.quick-actions button {
  margin-bottom: 12rpx;
}

.quick-actions button:last-child {
  margin-bottom: 0;
}
