.status {
  font-size: 22rpx;
}

.alert-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.mini-btn {
  margin: 0;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 22rpx;
  padding: 0 14rpx;
}

.refresh-btn {
  margin-top: 8rpx;
}

.status-ok {
  color: #16a34a;
}

.status-fail {
  color: #ef4444;
}

.status-normal {
  color: #5b6b7c;
}

.line {
  border-top: 1rpx solid #e6eef8;
  padding: 14rpx 0;
}

.line:first-child {
  border-top: 0;
}

.actions button {
  margin-top: 10rpx;
}
