.status {
  color: #2563eb;
  font-size: 24rpx;
}

.price {
  color: #dc2626;
  font-weight: 600;
}

.line {
  border-top: 1rpx solid #eef2f7;
  padding: 14rpx 0;
}

.line:first-child {
  border-top: 0;
  padding-top: 8rpx;
}

.remark {
  width: 100%;
  min-height: 140rpx;
  border: 1rpx solid #dbe2ea;
  border-radius: 10rpx;
  padding: 14rpx;
  margin-top: 12rpx;
  margin-bottom: 12rpx;
}

.actions {
  display: flex;
  gap: 12rpx;
}

.action-btn {
  flex: 1;
  margin: 0;
  font-size: 24rpx;
}
