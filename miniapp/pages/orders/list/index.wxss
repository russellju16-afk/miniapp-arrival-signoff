.actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  margin: 0;
}

.picker {
  margin-top: 10rpx;
  padding: 16rpx;
  border: 1rpx solid #dbe2ea;
  border-radius: 10rpx;
  color: #334155;
}

.search-row {
  margin-top: 14rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.search-input {
  flex: 1;
  min-height: 76rpx;
  border: 1rpx solid #cbd5e1;
  border-radius: 10rpx;
  padding: 0 16rpx;
  background: #f8fafc;
}

.search-btn {
  margin: 0;
  font-size: 24rpx;
  min-width: 120rpx;
}

.item {
  margin-top: 16rpx;
}

.status {
  color: #2563eb;
  font-size: 24rpx;
}

.price {
  color: #dc2626;
  font-weight: 600;
}

.more {
  margin-top: 10rpx;
  color: #2563eb;
  font-size: 24rpx;
  text-align: right;
}
