.search-row {
  margin-top: 12rpx;
  display: flex;
  gap: 10rpx;
  align-items: center;
}

.search-row .input {
  flex: 1;
  margin-top: 0;
}

.status-row {
  margin-top: 14rpx;
}

.invoice-context {
  background: linear-gradient(180deg, #ffffff 0%, #e8f1ff 100%);
}

.invoice-head {
  margin-bottom: 10rpx;
}

.mini-btn {
  margin-top: 0;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 24rpx;
  padding: 0 18rpx;
}

.search-btn {
  margin: 0;
  font-size: 24rpx;
  min-width: 108rpx;
  height: 64rpx;
  line-height: 64rpx;
  padding: 0 14rpx;
}

.reset-btn {
  margin-top: 16rpx;
}

.order-item {
  margin-bottom: 12rpx;
}

.order-top {
  margin-top: 0;
  margin-bottom: 8rpx;
}

.order-select {
  display: inline-flex;
  align-items: center;
}

.order-select-disabled {
  opacity: 0.65;
}

.check {
  width: 34rpx;
  height: 34rpx;
  line-height: 34rpx;
  text-align: center;
  border-radius: 8rpx;
  border: 1rpx solid #e6eef8;
  color: #ffffff;
  font-size: 20rpx;
  margin-right: 10rpx;
}

.checked {
  background: #1677ff;
  border-color: #1677ff;
}

.warn-text {
  color: #ef4444;
}

.item-action-row {
  margin-top: 14rpx;
  margin-bottom: 0;
}

.detail-btn {
  margin-top: 0;
  min-width: 180rpx;
}

.list-footer {
  text-align: center;
  padding: 8rpx 0 20rpx;
}
