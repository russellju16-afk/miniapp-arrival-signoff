.product-head {
  background: linear-gradient(180deg, #ffffff 0%, #f8fafc 100%);
}

.fav {
  font-size: 22rpx;
  color: #2563eb;
  border: 1rpx solid #bfdbfe;
  background: #eff6ff;
  border-radius: 999rpx;
  padding: 4rpx 12rpx;
}

.fav-active {
  color: #a16207;
  border-color: #fde68a;
  background: #fffbeb;
}

.price-line {
  margin-top: 14rpx;
  color: #dc2626;
  font-size: 40rpx;
  font-weight: 700;
}

.sku-row {
  border: 1rpx solid #dbe2ea;
  border-radius: 12rpx;
  padding: 14rpx;
  margin-bottom: 12rpx;
}

.sku-row-active {
  border-color: #2563eb;
  background: #eff6ff;
}

.sku-row-disabled {
  opacity: 0.6;
}

.qty-wrap {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin: 12rpx 0 20rpx;
}

.qty-btn {
  width: 80rpx;
  margin: 0;
}

.qty-input {
  flex: 1;
  height: 72rpx;
  border: 1rpx solid #dbe2ea;
  border-radius: 10rpx;
  text-align: center;
}

.ops {
  display: flex;
  gap: 12rpx;
}

.op-btn {
  flex: 1;
  margin: 0;
}

.service-item {
  margin-top: 10rpx;
  color: #334155;
}
