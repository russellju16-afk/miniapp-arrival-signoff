.header-card {
  background: linear-gradient(180deg, #ffffff 0%, #e8f1ff 100%);
}

.alert-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.mini-btn {
  margin: 0;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 22rpx;
  padding: 0 14rpx;
}

.price {
  margin-top: 14rpx;
  color: #ff6a3d;
  font-size: 40rpx;
  font-weight: 700;
}

.sku-row {
  border: 1rpx solid #e6eef8;
  border-radius: 14rpx;
  padding: 16rpx;
  margin-top: 12rpx;
}

.sku-row-active {
  border-color: #1677ff;
  background: #e8f1ff;
}

.qty-wrap {
  margin-top: 12rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.qty-btn {
  width: 80rpx;
  margin: 0;
  padding: 0;
}

.qty-input {
  flex: 1;
  height: 70rpx;
  border-radius: 12rpx;
  border: 1rpx solid #e6eef8;
  text-align: center;
}

.action-row {
  margin-top: 18rpx;
  display: flex;
  gap: 12rpx;
}

.action-btn {
  flex: 1;
  margin: 0;
}
