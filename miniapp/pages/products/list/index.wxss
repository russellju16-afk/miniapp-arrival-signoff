.hero {
  padding-top: 18rpx;
}

.search-row {
  margin-top: 16rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.search-input {
  flex: 1;
  min-height: 76rpx;
  border: 1rpx solid #cbd5e1;
  border-radius: 12rpx;
  background: #f8fafc;
  padding: 0 16rpx;
}

.search-btn {
  margin: 0;
  min-width: 120rpx;
  font-size: 24rpx;
}

.recent {
  margin-top: 14rpx;
}

.clear-recent {
  font-size: 22rpx;
  color: #2563eb;
}

.chips {
  margin-top: 8rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.chip {
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  color: #1e40af;
  background: #dbeafe;
}

.actions {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 12rpx;
}

.action {
  border: 1rpx solid #dbe2ea;
  border-radius: 12rpx;
  padding: 16rpx;
  background: #f8fafc;
}

.action-title {
  color: #0f172a;
  font-weight: 600;
}

.action-sub {
  display: block;
  margin-top: 6rpx;
  color: #64748b;
  font-size: 24rpx;
}

.quick-links {
  display: flex;
  gap: 12rpx;
}

.quick-btn {
  flex: 1;
  margin: 0;
  font-size: 24rpx;
}

.filter-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.switch-wrap {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.picker {
  border: 1rpx solid #dbe2ea;
  border-radius: 10rpx;
  padding: 10rpx 14rpx;
  font-size: 24rpx;
  color: #334155;
}

.item {
  margin-top: 16rpx;
}

.fav {
  font-size: 22rpx;
  color: #2563eb;
  border: 1rpx solid #bfdbfe;
  background: #eff6ff;
  border-radius: 999rpx;
  padding: 4rpx 12rpx;
}

.fav-active {
  color: #a16207;
  border-color: #fde68a;
  background: #fffbeb;
}

.info-row {
  margin-top: 12rpx;
}

.stock {
  font-size: 24rpx;
  color: #64748b;
}

.price {
  color: #dc2626;
  font-weight: 700;
}

.more {
  margin-top: 10rpx;
  color: #2563eb;
  font-size: 24rpx;
  text-align: right;
}
