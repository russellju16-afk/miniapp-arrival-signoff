.status-ok {
  color: #16a34a;
}

.status-pending {
  color: #f59e0b;
}

.alert-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.mini-btn {
  margin: 0;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 22rpx;
  padding: 0 14rpx;
}

.line {
  padding: 14rpx 0;
  border-bottom: 1rpx solid #e6eef8;
}

.line:last-child {
  border-bottom: none;
}

.line-row {
  display: flex;
  justify-content: space-between;
  margin: 6rpx 0;
}

.line-label {
  color: #5b6b7c;
  font-size: 24rpx;
}

.line-value {
  color: #0b1f3a;
  font-size: 26rpx;
}

.remark-input {
  margin: 12rpx 0 20rpx;
  width: 100%;
  min-height: 140rpx;
  border: 1rpx solid #e6eef8;
  border-radius: 12rpx;
  background: #f6f9ff;
  padding: 16rpx;
}

.lines-empty {
  padding: 40rpx 12rpx 20rpx;
}
