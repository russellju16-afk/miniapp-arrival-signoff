{
  "name": "kingdee-wechat-backend",
  "version": "1.0.0",
  "private": true,
  "description": "微信小程序到货签收后端（对接金蝶云星辰 OpenAPI）",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:tunnel": "bash scripts/start-mini-tunnel.sh",
    "build": "tsc -p tsconfig.json",
    "start": "node build/server.js",
    "test": "jest --runInBand",
    "doctor:env": "tsx scripts/doctor_env.ts",
    "extract:endpoints": "tsx scripts/extract_endpoints.ts",
    "kd:ping": "tsx scripts/kd_ping.ts",
    "kd:live-check": "tsx scripts/kd_live_check.ts",
    "sync:demo": "tsx scripts/sync_demo.ts",
    "sync:deliveries": "tsx scripts/sync_deliveries.ts",
    "sync:receipts": "tsx scripts/sync_receipts.ts",
    "smoke:core": "bash scripts/smoke-core.sh",
    "smoke:mini": "bash scripts/smoke-mini.sh",
    "smoke:mall": "bash scripts/smoke-mall.sh",
    "smoke:mall:live": "bash scripts/smoke-mall-live.sh",
    "prisma:generate": "prisma generate",
    "core:prisma:generate": "prisma generate --schema prisma/core/schema.prisma",
    "core:db:push": "bash scripts/core-db-push.sh",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "health": "bash scripts/health-check.sh"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "axios": "^1.8.1",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.1",
    "ioredis": "^5.4.2",
    "node-cron": "^4.2.1",
    "prisma": "^5.22.0",
    "pino": "^9.6.0",
    "qrcode": "^1.5.4",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.1",
    "@types/node-cron": "^3.0.11",
    "@types/qrcode": "^1.5.5",
    "jest": "^29.7.0",
    "pino-pretty": "^13.0.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
